---
import { Image } from 'astro:assets'
import facebookIcon from '../assets/facebook.svg'
import instagramIcon from '../assets/insta.svg'
import emailIcon from '../assets/email.svg'
---

<div
	class="fixed bottom-8 left-0 right-0 z-10 mx-auto flex items-center justify-center gap-10 sm:left-auto sm:right-6 sm:mx-0 sm:ml-6 md:right-8 md:ml-8"
>
	<a href="/"
		><Image
			src={facebookIcon}
			alt="facebook icon"
			class="block w-7 transition-all duration-500 hover:scale-125 focus-visible:scale-125"
		/></a
	>
	<a href="/"
		><Image
			src={instagramIcon}
			alt="instagram icon"
			class="block w-7 transition-all duration-500 hover:scale-125 focus-visible:scale-125"
		/></a
	>
	<a href="/"
		><Image
			src={emailIcon}
			alt="email icon"
			class="block w-7 transition-all duration-500 hover:scale-125 focus-visible:scale-125"
		/>
	</a>
</div>
