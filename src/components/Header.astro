---
import Logo from '../assets/logo-simplify.svg'
import { Image } from 'astro:assets'
import Link from '../components/Link.astro'
import MobileHeader from '../components/MobileHeader'
---

<header
	class="absolute left-0 top-0 isolate z-10 flex w-full items-center justify-between px-6 py-8 md:px-8"
>
	<a class="-z-10" href="/"
		><Image src={Logo} alt="Wolf Logo" width={65} class="w-[50px] sm:w-[65px]" /></a
	>
	<nav class="hidden md:block">
		<ul class="flex items-center justify-start gap-10">
			<Link dim="95px" text="portofoliu" />
			<Link dim="75px" text="tablouri" />
			<Link dim="75px" text="albume" />
			<Link dim="125px" text="despre mine" />
		</ul>
	</nav>
	<div class="flex md:hidden">
		<MobileHeader client:visible>
			<Link text="portofoliu" />
			<Link text="tablouri" />
			<Link text="albume" />
			<Link text="despre mine" />
		</MobileHeader>
	</div>
</header>
