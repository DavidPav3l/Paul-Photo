---
import paulClapaPhoto from '../assets/paul-clapa.webp'
import { Image } from 'astro:assets'
---

<style>
	.blob {
		border-radius: 20% 80% 17% 83% / 45% 46% 54% 55%;
	}
</style>

<div class="relative flex items-center justify-center">
	<Image
		src={paulClapaPhoto}
		alt="Paul Clapa"
		width="400"
		height="400"
		class="blob z-10 w-[80%] max-w-[30rem] shadow-2xl shadow-neutral-950"
	/>
	<h1
		class="absolute -top-[10%] left-[25%] z-10 hidden font-MontSerrat text-6xl font-light sm:block lg:-top-[5%] lg:text-5xl xl:-top-[8%] xl:left-[30%] xl:text-6xl"
	>
		DESPRE
		<br />
		<span class="ml-[5rem] whitespace-nowrap text-5xl font-semibold lg:text-4xl xl:text-5xl"
			>Paul Clapa</span
		>
	</h1>
</div>
